ts_library("unittests") {
  testonly = true

  sources = [
    "AutomaticFileSystemManager.test.ts",
    "AutomaticFileSystemWorkspaceBinding.test.ts",
    "NetworkPersistenceManager.test.ts",
    "PersistenceImpl.test.ts",
    "PlatformFileSystem.test.ts",
  ]

  deps = [
    ":bundle",
    "../../core/platform:bundle",
    "../../core/sdk:bundle",
    "../../testing",
  ]

  entrypoint = "persistence.ts"

  deps = [ ":persistence" ]

  visibility = [
    ":*",
    "../../core/sdk:unittests",
    "../../entrypoints/main/*",
    "../../panels/ai_assistance/*",
    "../../panels/changes/*",
    "../../panels/common/*",
    "../../panels/network/*",
    "../../panels/recorder/*",

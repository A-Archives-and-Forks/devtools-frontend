devtools_entrypoint("meta") {
  entrypoint = "persistence-meta.ts"

  deps = [
    ":bundle",
    "../../core/common:bundle",
    "../../core/i18n:bundle",
  ]

  visibility = [ "../../entrypoints/*" ]

{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run current test file",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "${file}"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test file",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": ["run", "test", "--", "--debug", "${file}"],
      "env": {
        "VSCODE_DEBUGGER": true
      }
    }
  ]
}
